<h1>New game!</h1>

<div class="d-flex">
  <% @array.each do |item| %>
    <div class="p-3 m-1 shadow-sm bd-highlight bg-primary bg-gradient rounded tile-text"><%= item %></div>
  <% end %>
</div>

<div class="d-flex justify-content-center my-2">
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @array %>
    <div class="input-group mb-3">
      <input type="text" name="word" class="form-control" placeholder="Insert your word here" aria-label="Word input" aria-describedby="button-addon2">
      <button class="btn btn-light btn-outline-secondary" type="submit" id="button-addon2">Play</button>
    </div>
  </form>
</div>